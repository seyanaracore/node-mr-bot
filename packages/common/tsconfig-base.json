{
  "ts-node": {
    // Otherwise, ts-node does not see "declare global"
    // https://stackoverflow.com/questions/51610583/ts-node-ignores-d-ts-files-while-tsc-successfully-compiles-the-project
    "files": true
  },
  "include": ["src"],
  "exclude": ["dist"],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": "./",
    "tsBuildInfoFile": "node_modules/.tmp/.tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noEmit": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": false,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true
  }
}
