{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    ".stylelintrc.cjs",
    ".eslintrc.cjs",
    "lint-staged.config.js",
    "vite.config.ts",
    "deploy.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["node"]
  }
}
