    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^7.0.1",
    "sass": "^1.80.5",
    "stylelint": "^16.3.1",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.2.1",
    "ts-node": "^10.9.2",
