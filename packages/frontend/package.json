{
  "name": "@packages/frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "deploy": "npm run build && npm run deploy-only",
    "deploy-only": "cross-env TS_NODE_PROJECT=\"tsconfig.node.json\" node --experimental-specifier-resolution=node --experimental-modules --no-warnings --loader ts-node/esm deploy.ts",
