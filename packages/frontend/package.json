    "lint:css": "stylelint 'src/**/*.{css,scss,vue}'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force"
  },
  "dependencies": {
    "@packages/common": "*",
    "axios": "^1.7.7",
    "cross-env": "^7.0.3",
